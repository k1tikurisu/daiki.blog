{
  "name": "daiki.blog",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --ext .ts,.js,.astro",
    "lint:fix": "eslint . --ext .ts,.js,.astro --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:md": "markdownlint content/**/*.md",
    "lint:md:fix": "markdownlint content/**/*.md --fix",
    "lint:text": "textlint content/**/*.md",
    "lint:text:fix": "textlint content/**/*.md --fix",
    "lint:all": "npm run lint && npm run lint:md && npm run lint:text",
    "fix:all": "npm run lint:fix && npm run format && npm run lint:md:fix && npm run lint:text:fix",
    "deploy": "wrangler pages deploy dist",
    "deploy:preview": "wrangler pages deploy dist --env preview"
  },
  "dependencies": {
    "@astrojs/rss": "^4.0.12",
    "astro": "^5.13.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-plugin-astro": "^1.3.1",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "textlint": "^15.2.2",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "textlint-rule-prh": "^6.1.0",
    "wrangler": "^4.33.1"
  }
}
